{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "open shell",
            "group": "none",
            "type": "shell",
            "linux": {
                "command": "python3 system/shell/shell.py"
            },
            "presentation": {
                "focus": true,
                "panel": "dedicated"
            }
        },
        {
            "label": "clean higgs",
            "group": "build",
            "type": "shell",
            "command": "cmake --build --preset higgs-rel --target clean",
            "problemMatcher": "$gcc",
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "build higgs",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "command": "cmake --build --preset higgs-rel",
            "problemMatcher": "$gcc",
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "clean build higgs",
            "group": "build",
            "type": "shell",
            "command": "cmake --build --preset higgs-rel --clean-first",
            "problemMatcher": "$gcc",
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "reset higgs",
            "group": "none",
            "type": "shell",
            "command": "cmake --build --preset higgs-rel --target reset",
            "presentation": {
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "flash higgs",
            "group": "none",
            "type": "shell",
            "command": "cmake --build --preset higgs-rel --target flash",
            "presentation": {
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "build and flash higgs",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "type": "shell",
            "dependsOn": [
                "build higgs",
                "flash higgs"
            ],
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "build tests",
            "group": "build",
            "type": "shell",
            "command": "cmake --build --preset tests",
            "problemMatcher": "$gcc",
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "run tests",
            "group": "test",
            "type": "shell",
            "command": "ctest --preset tests --output-on-failure",
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "build and run tests",
            "group": "test",
            "type": "shell",
            "dependsOn": [
                "build tests",
                "run tests"
            ],
            "dependsOrder": "sequence"
        }
    ]
}
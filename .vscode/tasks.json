{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "open shell",
            "group": "none",
            "type": "shell",
            "linux": {
                "command": "python3 extern/ln/ln/shell/tools/shell.py"
            },
            "presentation": {
                "focus": true,
                "panel": "dedicated"
            }
        },
        {
            "label": "clean",
            "group": "build",
            "type": "shell",
            "command": "cmake --build --preset ${input:target}-${input:build_type} --clean-first",
            "problemMatcher": "$gcc",
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "command": "cmake --build --preset ${input:target}-${input:build_type}",
            "problemMatcher": "$gcc",
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "clean build",
            "group": "build",
            "type": "shell",
            "command": "cmake --build --preset ${input:target}-${input:build_type} --clean-first",
            "problemMatcher": "$gcc",
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "reset",
            "group": "none",
            "type": "shell",
            "command": "cmake --build --preset ${input:target}-${input:build_type} --target reset_device",
            "presentation": {
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "flash",
            "group": "none",
            "type": "shell",
            "command": "cmake --build --preset ${input:target}-${input:build_type} --target flash_device",
            "presentation": {
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "test",
            "group": "test",
            "type": "shell",
            "command": "cmake --workflow tests",
            "problemMatcher": "$gcc",
            "presentation": {
                "focus": true
            }
        }
    ],
    "inputs": [
        {
            "id": "build_type",
            "type": "pickString",
            "description": "Build type",
            "options": [
                "rel",
                "dbg"
            ]
        },
        {
            "id": "target",
            "type": "pickString",
            "description": "Target project",
            "options": [
                "higgs"
            ]
        },
    ]
}
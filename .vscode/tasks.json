{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "reset ST-LINK",
            "group": "none",
            "type": "shell",
            "linux": {
                "command": "./utils/reset-stlink.sh"
            },
            "presentation": {
                "clear": true,
                "reveal": "never"
            }
        },
        {
            "label": "open fibcom /dev/serial0 [RPI4 UART]",
            "group": "none",
            "type": "shell",
            "linux": {
                "command": "./utils/openFibcom.sh /dev/serial0"
            },
            "presentation": {
                "focus": true,
                "panel": "dedicated"
            }
        },
        {
            "label": "open fibcom /dev/ttyACM0 [ST-LINK UART]",
            "group": "none",
            "type": "shell",
            "linux": {
                "command": "./utils/openFibcom.sh /dev/ttyACM0"
            },
            "presentation": {
                "focus": true,
                "panel": "dedicated"
            }
        },
        {
            "label": "open fibcom /dev/ttyS8 [WSL ST-LINK UART]",
            "group": "none",
            "type": "shell",
            "linux": {
                "command": "./utils/openFibcom.sh /dev/ttyS8"
            },
            "presentation": {
                "focus": true,
                "panel": "dedicated"
            }
        },
        {
            "label": "clean higgs",
            "group": "build",
            "type": "shell",
            "command": "cmake --build --preset higgs-rel --target clean",
            "problemMatcher": "$gcc",
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "build higgs",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "command": "cmake --build --preset higgs-rel",
            "problemMatcher": "$gcc",
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "clean build higgs",
            "group": "build",
            "type": "shell",
            "command": "cmake --build --preset higgs-rel --clean-first",
            "problemMatcher": "$gcc",
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "reset higgs",
            "group": "none",
            "type": "shell",
            "command": "cmake --build --preset higgs-rel --target reset",
            "presentation": {
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "flash higgs",
            "group": "none",
            "type": "shell",
            "command": "cmake --build --preset higgs-rel --target flash",
            "presentation": {
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "build and flash higgs",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "type": "shell",
            "dependsOn": [
                "build higgs",
                "flash higgs"
            ],
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "build tests",
            "group": "build",
            "type": "shell",
            "command": "cmake --build --preset tests",
            "problemMatcher": "$gcc",
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "run tests",
            "group": "test",
            "type": "shell",
            "command": "ctest --preset tests --output-on-failure",
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "build and run tests",
            "group": "test",
            "type": "shell",
            "dependsOn": [
                "build tests",
                "run tests"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "kill openocd processes",
            "group": "none",
            "type": "shell",
            "linux": {
                "command": "./utils/killProcessesByPattern.sh openocd",
            }
        },
        {
            "label": "preLaunchTaskHiggs",
            "group": "none",
            "type": "shell",
            "linux": {
                "command": "./utils/build.sh -p higgs -t debug",
                "problemMatcher": "$gcc",
            }
        },
        {
            "label": "Launch OpenOCD",
            "command": "openocd.exe",
            "args": [
                "-c",
                "\"bindto 0.0.0.0\"",
                "-f",
                "\"${input:openocd.config}\"",
            ],
            "type": "shell",
            "isBackground": true,
            "problemMatcher": []
        },
    ],
    "inputs": [
        {
            "id": "openocd.config",
            "type": "pickString",
            "description": "Select the configuration file for OpenOCD",
            "options": [
                "modules/higgs/openocd.cfg"
            ],
            "default": "modules/higgs/openocd.cfg"
        }
    ]
}
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "reset ST-LINK",
            "type": "shell",
            "linux": {
                "command": "./Utils/reset-stlink.sh"
            },
            "presentation": {
                "clear": true,
                "reveal": "never"
            }
        },
        {
            "label": "reset target",
            "type": "shell",
            "linux": {
                "command": "./Utils/reset-target.sh"
            },
            "presentation": {
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "open fibcom /dev/serial0 [RPI4 UART]",
            "type": "shell",
            "linux": {
                "command": "./Utils/openFibcom.sh /dev/serial0"
            },
            "presentation": {
                "focus": true,
                "panel": "dedicated"
            }
        },
        {
            "label": "open fibcom /dev/ttyACM0 [ST-LINK UART]",
            "type": "shell",
            "linux": {
                "command": "./Utils/openFibcom.sh /dev/ttyACM0"
            },
            "presentation": {
                "focus": true,
                "panel": "dedicated"
            }
        },
        {
            "label": "open fibcom /dev/ttyS8 [WSL ST-LINK UART]",
            "type": "shell",
            "linux": {
                "command": "./Utils/openFibcom.sh /dev/ttyS8"
            },
            "presentation": {
                "focus": true,
                "panel": "dedicated"
            }
        },
        {
            "label": "build Higgs [Release]",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "linux": {
                "command": "./Utils/build.sh -p Higgs -t release",
                "problemMatcher": "$gcc",
            },
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "build and flash Higgs [Release]",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "linux": {
                "command": "./Utils/flash.sh -p Higgs -t release -b",
                "problemMatcher": "$gcc",
            },
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "build unit tests",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "linux": {
                "command": "./Utils/test.sh",
                "problemMatcher": "$gcc",
            },
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "run unit tests",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "linux": {
                "command": "./Build/tests/tests"
            },
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "build and run unit tests",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn":["build unit tests","run unit tests"],
            "dependsOrder": "sequence"
        },
        {
            "label": "kill openocd processes",
            "type": "shell",
            "linux": {
                "command": "./Utils/killProcessesByPattern.sh openocd",
            }
        },
        {
            "label": "preLaunchTaskHiggs",
            "type": "shell",
            "group": "test",
            "linux": {
                "command": "./Utils/build.sh -p Higgs -t debug",
                "problemMatcher": "$gcc",
            }
        },
    ]
}
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Higgs",
            "device": "STM32F303RE",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/Build/Debug/Modules/Higgs/Higgs",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "configFiles": [
                // NOTE: interface,target order important
                "interface/stlink.cfg",
                "target/stm32f3x.cfg"
            ],
            "cpu": "cortex-m4",
            "preLaunchTask": "Build and Flash Higgs [Debug]",
            "postRestartSessionCommands": ["Reset target over ST-LINK"],
            "svdFile": "${workspaceRoot}/System/MSP/STM32F303.svd",
            "interface": "swd",
            "breakAfterReset": false,
            "runToMain": true,
            "runToEntryPoint": "main",
            // "rtos": "FreeRTOS", // does not work - embedded:startup.tcl:26: Error: Can't find /tmp/tmp-23749VAIUfVnJ1hZk
        }
    ]
}
